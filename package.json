  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start:server\" \"npm run start:client\"",
    "start:win": "concurrently --kill-others \"npm run start:server:win\" \"npm run start:client\"",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start:server:win": "cd server && npm run start:win",
    "install:all": "concurrently --kill-others \"npm run install:server\" \"npm run install:client\"",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^3.4.0"
  }
}
